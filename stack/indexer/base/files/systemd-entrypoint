# This wrapper script allows SystemD to feed a file containing a passphrase into
# the main Cyware-indexer startup script

if [ -n "$WI_KEYSTORE_PASSPHRASE_FILE" ] ; then
  exec /usr/share/cyware-indexer/bin/opensearch "$@" < "$WI_KEYSTORE_PASSPHRASE_FILE"
else
  exec /usr/share/cyware-indexer/bin/opensearch "$@"
fi